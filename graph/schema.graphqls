# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Task {
  id: ID!
  title: String!
  text: String!
  createdAt: Time!
  updatedAt: Time!
}

type User {
  id: ID!
  name: String!
  tasks: [Task!]!
}

type Query {
  tasks: [Task!]!
  users: [User!]!
}

input createTaskInput {
  userID: ID!
  title: String!
  text: String!
}

type createTaskPayload {
  task: Task!
}

type Mutation {
  createTask(input: createTaskInput!): createTaskPayload!
}

scalar Time
